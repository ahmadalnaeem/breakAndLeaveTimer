{
  "manifest_version": 3,
  "name": "Break and Leave Timer",
  "version": "1.0",
  "description": "A simple timer for breaks and leave times with notifications",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
